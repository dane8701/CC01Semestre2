<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CC01Semestre2.Mobile.MainPage"
             BackgroundColor="Snow">

    <StackLayout
        Spacing="10" 
        Padding="10" 
        VerticalOptions="Center" 
        >
        <Entry Placeholder="Nom du bien"
                Margin="1, 1, 1, 1"
               BackgroundColor="White"/>
        <Editor Placeholder="Description"
                BackgroundColor="White"
                   Margin="1, 1, 1, 1"/>
        <Entry Placeholder="PU"
               BackgroundColor="White"
                   Margin="1, 1, 1, 1"/>
        <Label Text="Date de crération"
               Margin="1, 1, 1, 1"/>
        <DatePicker Format="D"
                    BackgroundColor="White"
                    VerticalOptions="CenterAndExpand"
                    Margin="1, 1, 1, 1"/>
        <Entry Placeholder="Id du propriétaire"
               BackgroundColor="White"
               Margin="1, 1, 1, 1"/>
        
        <Button Text="SAVE !" TextColor="Black" BackgroundColor="CadetBlue"/>
    </StackLayout>

</ContentPage>
